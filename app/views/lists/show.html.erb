<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<!-- Display the bookmark -->
<p>
  <strong>Your bookmarks:</strong>
  <% @bookmarks.each do |bookmark| %>
    <div class="list-group-item">
      <%= bookmark.comment %>
      <%= link_to "Delete",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</p>

