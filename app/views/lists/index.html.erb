<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path("cover.jpg") %>)">
  <div class="container">
    <h1>Save <strong>any kind</strong> of <strong>movies</strong></h1>
    <p>Categorize your favourite movies by their genres</p>
    <%= link_to 'New movie List', new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container py-5"> <!-- container -->
  <div class="d-flex align-items-center justify-content-between mb-3"> <!-- bootstrap flex-box -->
      <h2>My Lists</h2>
      <div>
        <%= link_to 'New movie List', new_list_path, class: "btn btn-flat" %>
      </div>
  </div>
</div>

<!-- Movie list cards -->
<div class="container">
  <div class="row pb-5">
        <% @lists.each do |list| %>
          <div class="col-12 col-sm-6 col-md-4 mb-4">
            <%= link_to list_path(list), class: "text-decoration-none" do %>
              <% if list.photo.attached? %>
                <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
                  <%= list.name %>
                </div>
              <% else %>
                <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path("list_background.jpg") %>)">
                  <%= list.name %>
                </div>
              <% end %>

            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</div>

